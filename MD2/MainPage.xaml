<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MD2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button 
                x:Name="StudentBtn"
                Text="Student Info"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked"
                WidthRequest="200"/>
            
            <Button 
                x:Name="DataView"
                Text="View Data"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked"
                WidthRequest="200"/>

            <Button 
                x:Name="DataFile"
                Text="Load to/from a file"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="DataFile_Clicked"
                WidthRequest="200"/>

            <Button 
                x:Name="CreateFile"
                Text="Create Data"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="CreateFile_Clicked"
                WidthRequest="200"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
